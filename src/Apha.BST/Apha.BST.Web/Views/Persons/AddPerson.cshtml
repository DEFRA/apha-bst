@model AddPersonViewModel
@{
	ViewData["Title"] = "Add Person";
}
@{
	var isDisabled = !Model.CanEdit ? "disabled" : null;
}
<form asp-action="AddPerson" method="post">
	@Html.AntiForgeryToken()
	<table class="w-100 h-100 mt-3 mx-2">
		<thead class="sr-only"><tr><th scope="col"></th></tr></thead>
		<tbody class="mx-2">
			<tr>
				<td class="fw-bold text-decoration-underline">
					Add a person
				</td>
				<td></td>
			</tr>
			<tr>
				<td class="w-25 py-3">
					<label for="Name" id="Name">Please type person's name (surname, first name)</label>
				</td>
				<td class="w-50">
					<input id="Name" asp-for="Name" type="text" style="width:45%" placeholder=" " disabled="@isDisabled">
					<span asp-validation-for="Name" class="text-danger"></span>
				</td>

			</tr>
			<tr>
				<td class="w-25 py-3">
					<label for="PlantNo" id="PlantNo">Please select site</label>
				</td>
				<td class="w-50">
					<select id="PlantNo" asp-for="PlantNo" asp-items="Model.Sites" style="width:45%" disabled="@isDisabled">
							<option value="">Select site...</option>
						</select>					
					<span asp-validation-for="PlantNo" class="text-danger"></span>
				</td>
				<td class="w-10"></td>
				<td class="w-10"></td>
			</tr>
			<tr>
				<td class="w-25"></td>
				<td class="w-50">
					<table class="w-100">
						<thead class="sr-only"><tr><th scope="col"></th></tr></thead>
						<tr>
							<td class="w-25">
								<button type="submit" class="btn p-0" title="Save Person">
									<img src="~/Images/tick.gif" alt="Save Person" />
								</button>
							</td>
							<td style="width:40%">
								<a href="@Url.Action("Index", "Home")" class="btn" title="Cancel action">
									<img src="~/Images/cancel.jpeg" alt="Cancel action" />
								</a>
							</td>
						</tr>
						
							<td>
								<div class="pt-3 px-5 ErrorText">
									@if (TempData["PersonMessage"] != null)
									{
										@TempData["PersonMessage"]
									}
								</div>
							</td>
					
						
					</table>
				</td>
			
			</tr>


	</table>
</form>
