@model EditTrainingViewModel
@{
	ViewData["Title"] = "EditTraining";
}

<form asp-action="EditTraining" method="post" id="editTrainingForm">
	<table class="w-80 h-100 m-4">
		<tbody class="me-5">
			<tr>
				<td class="fw-bold text-decoration-underline">
					Alter this training record
				</td>
				<td></td>
			</tr>

			<tr>
				<td class="pt-2">
					<label asp-for="PersonId">Trainee</label>
				</td>
				<td class="px-5">
					<select asp-for="PersonId">
						@foreach (var trainee in Model.Persons)
						{
							@* <option>@trainee.Persons</option> *@
							<option value="@trainee.Value">@trainee.Text</option>
						}
					</select>
					<span asp-validation-for="PersonId" class="text-danger"></span>
				</td>
			</tr>
			<tr>
				<td class="pt-1 ">
					<label asp-for="TrainerId">Trainer</label>
				</td>
				<td class="pt-1 px-5">
					<select asp-for="TrainerId">
						@foreach (var trainer in Model.Persons)
						{
							@* <option>@trainer.Person</option> *@
							<option value="@trainer.Value">@trainer.Text</option>
						}
					</select>
					<span asp-validation-for="TrainerId" class="text-danger"></span>
				</td>

			</tr>
			<tr>
				<td class="pt-1">
					<label asp-for="TrainingType">Training Type</label>
				</td>
				<td class="pt-1 px-5">
					<select asp-for="TrainingType">
						@* <option value="">Select training type...</option>
						@foreach (var trainingType in trainingTypes)
						{
							<option>@trainingType.Value</option>
						} *@
						<option value="">Select training type...</option>
						<option value="Cascade trained">Cascade trained</option>
						<option value="Trained">Trained</option>
						<option value="Training confirmed">Training confirmed</option>
					</select>
					<span asp-validation-for="TrainingType" class="text-danger"></span>
				</td>

			</tr>
			<tr>
				<td class="pt-1">
					<label asp-for="TrainingDateTime">Date of training</label>
				</td>
				<td class="pt-1 px-5">

					<input asp-for="TrainingDateTime" id="dateInput" type="date" class="custom-date-input" placeholder=" ">
					<button type="button" onclick="openDateCalender()" class="btn btn-sm">
						<img src="~/Images/asp-calendar.gif" alt="img" id="calenderImage" />
					</button>

					<span sp-for="TrainingDate" asp-validation-for="TrainingDateTime" class="text-danger"></span>
				</td>
			</tr>
			<tr>
				<td class="pt-1">
					<label asp-for="TrainingAnimal">Species trained</label>
				</td>
				<td class="pt-1 px-5">
					@* <select asp-for="Species">
						<option value="">Select species...</option>
						@foreach (var species in species)
						{
							<option>@species.Value</option>
						}
					</select> *@
					<select asp-for="TrainingAnimal">
						<option value="">Select species...</option>
						<option value="Cattle">Cattle</option>
						<option value="Sheep">Sheep</option>
						<option value="Goat">Goat</option>
					</select>
					<span asp-validation-for="TrainingAnimal" class="text-danger"></span>
				</td>

			<tr class="mt-2">
				<td></td>
				<td>

					<table>
						<tr>
							<td class="pt-2 px-5">
								<button type="submit" class="btn" tabindex="10">
									<img src="~/Images/tick.gif" alt="Save site" />
								</button>
							</td>
							<td class="pt-2 px-5">
								<a href="@Url.Action("Index", "Home")" class="btn">
									<img src="~/Images/cancel.jpeg" alt="Cancel action" />
								</a>
							</td>
						</tr>
					</table>
				</td>

			</tr>
			<tr>
				<td></td>
				<td>
					<p class="pt-2 px-5 ErrorText ">
					@* 	@if (!string.IsNullOrEmpty(ViewBag.message))
						{
							@ViewBag.message
						}

					</p> *@
						<div class="ErrorText">
								@if (TempData["Message"] != null)
								{
									@TempData["Message"]
								}
						</div>
				</td>
			</tr>
			
		</tbody>
	</table>
</form>

